{
  "name": "glee2",
  "version": "1.0.0",
  "description": "This is just a test.",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "release": "standard-version",
    "premigrations:create": "npm run build",
    "migrations:create": "ts-node -r dotenv/config node_modules/.bin/typeorm migration:create",
    "premigrations:generate": "npm run build",
    "migrations:generate": "ts-node -r dotenv/config node_modules/.bin/typeorm migration:generate",
    "premigrations": "npm run build",
    "migrations": "ts-node -r dotenv/config node_modules/.bin/typeorm migration:run",
    "migrations-win": "ts-node node_modules/typeorm/cli.js migration:run",
    "premigrations:revert": "npm run build",
    "migrations:revert": "ts-node -r dotenv/config node_modules/.bin/typeorm migration:revert",
    "update:domain": "npm update @kiwihr/kiwi-domain"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^9.0.2",
    "@nestjs/core": "^9.0.2",
    "@nestjs/cqrs": "^9.0.1",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.2",
    "@nestjs/swagger": "^6.0.2",
    "@nestjs/typeorm": "^9.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/winston": "^2.4.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cli-color": "^2.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-jwt": "^7.7.5",
    "glee-jwks-rsa": "^1.1.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "moment-timezone": "^0.5.34",
    "passport": "^0.6.0",
    "passport-auth0": "^1.4.2",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2",
    "winston-loggly-bulk": "^3.2.1",
    "winston-slack-webhook": "^0.1.6"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/joi": "^17.2.2",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "tslint": "5.20.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/migrations/**/*.ts",
      "!src/modules/config/**/*.ts",
      "!src/modules/app/**/*.ts",
      "!src/modules/auth/**/*.ts",
      "!src/*.ts"
    ],
    "testEnvironment": "node",
    "verbose": false
  }
}
